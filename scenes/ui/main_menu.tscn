[gd_scene load_steps=2 format=3 uid="uid://cmain_menu"]

[sub_resource type="GDScript" id="GDScript_menu"]
script/source = "extends Control

func _ready() -> void:
	Input.mouse_mode = Input.MOUSE_MODE_VISIBLE

func _on_start_pressed() -> void:
	GameManager.change_level(\"home\")

func _on_quit_pressed() -> void:
	get_tree().quit()
"

